{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "launcher",
  "version": "0.1.0",
  "identifier": "com.akmas.launcher",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1421",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "splash",
        "title": "Loading",
        "url": "splash.html",
        "width": 450,
        "height": 400,
        "decorations": false,
        "center": true,
        "resizable": false,
        "alwaysOnTop": true
      },
      {
        "label": "main",
        "title": "Gamer Hub",
        "url": "index.html",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "visible": false,
        "resizable": true,
        "decorations": true,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}